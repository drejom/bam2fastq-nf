manifest {
    mainScript = 'main.nf'
    author = "Denis O'Meally"
    version = "0.1"
    description = "Nextflow pipeline modelled after samtools man page"
}

singularity {
            enabled = true
            cacheDir = "/opt/singularity-images/nextflow"
}

params { 
  name          = "bam2fastq-nf"
  bams         = "../data/bam/*.bam"
  output        = "../data"
}

// City of Hope Apollo cluster, fast queue

process {
        executor='slurm'
        queue='fast'
        memory='8.G'
        cpus='1'
        time='2.h'
        }

timeline {
  enabled = true
  file = "${params.output}/pipeline_info/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.output}/pipeline_info/execution_report.html"
}
trace {
  enabled = true
  file = "${params.output}/pipeline_info/execution_trace.txt"
}
dag {
  enabled = true
  file = "${params.output}/pipeline_info/pipeline_dag.svg"
}
